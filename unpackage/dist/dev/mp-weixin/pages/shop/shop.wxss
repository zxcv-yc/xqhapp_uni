	border-radius: 10rpx;
}
.focusOn_btn {
	background-image: -webkit-linear-gradient(#FF94B6, #FF6F9C);
	background-image: linear-gradient(#FF94B6, #FF6F9C);
	padding: 0.1rem 1rem;
	box-shadow: 0 0.1875rem 0.375rem rgba(255, 111, 157, 0.315);
	border-radius: 999px;
}
.view_content {
	padding: 30rpx;
}
.goods_list {
	/* padding: 30upx; */
